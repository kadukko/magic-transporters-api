generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model MagicMover {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  weightLimit   Float
  energy        Int
  questState    QuestState
}

enum QuestState {
  RESTING
  LOADING
  ON_A_MISSION
  DONE
}

model MagicItem {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  weight        Float
}

